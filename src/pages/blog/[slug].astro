---
import Base from '../../layouts/Base.astro';
import { getBlogPosts, getAssetUrl, resolveAsset } from '../../lib/contentful';
import { generateBreadcrumbStructuredData } from '../../lib/seo';
import { formatDate } from '../../lib/contentful';
import { renderRichText } from '../../lib/rich-text-renderer';
import { BLOCKS } from '@contentful/rich-text-types';
import type { BlogPost } from '../../types/contentful';

export async function getStaticPaths() {
  try {
    const postsResponse = await getBlogPosts({ limit: 1000 });
    
    // Filter posts to ensure they have the required structure
    // Contentful Delivery API typically returns fields directly (not nested by locale)
    const validPosts = (postsResponse.items || [])
      .filter((post: any) => {
        if (post?.sys?.type !== 'Entry' || !post?.fields) return false;
        
        // Handle both direct field access and locale-nested fields
        const title = post.fields.title || 
          (typeof post.fields.title === 'object' ? post.fields.title['en-US'] || post.fields.title['en'] : null);
        const slug = post.fields.slug || 
          (typeof post.fields.slug === 'object' ? post.fields.slug['en-US'] || post.fields.slug['en'] : null);
        
        return !!(title && slug);
      })
      .map((post: any) => {
        // Normalize field access (handle locale nesting if present)
        const normalizeField = (field: any): any => {
          if (!field) return undefined;
          if (typeof field === 'object' && !Array.isArray(field) && !field.sys) {
            // Likely locale-nested
            return field['en-US'] || field['en'] || Object.values(field)[0];
          }
          return field;
        };
        
        return {
          ...post,
          fields: {
            ...post.fields,
            title: String(normalizeField(post.fields.title) || post.fields.title || ''),
            slug: String(normalizeField(post.fields.slug) || post.fields.slug || ''),
            excerpt: normalizeField(post.fields.excerpt) || post.fields.excerpt,
            content: normalizeField(post.fields.content) || post.fields.content,
            author: normalizeField(post.fields.author) || post.fields.author,
            publishDate: normalizeField(post.fields.publishDate) || post.fields.publishDate,
            tags: post.fields.tags || [],
            featuredImage: post.fields.featuredImage,
          }
        };
      });
    
    // Debug: Log all slugs being generated
    const slugs = validPosts.map((post: any) => post.fields.slug);
    console.log('ðŸ“ Generated blog post slugs:', slugs);
    console.log('ðŸ“Š Total valid posts:', validPosts.length);
    
    // Log first post structure for debugging
    if (validPosts.length > 0) {
      console.log('ðŸ“„ Sample post:', {
        title: validPosts[0].fields.title,
        slug: validPosts[0].fields.slug,
        id: validPosts[0].sys.id
      });
    }
    
    return validPosts.map((post: BlogPost) => ({
      params: { slug: post.fields.slug },
      props: { 
        post,
        includes: postsResponse.includes || {}
      },
    }));
  } catch (error) {
    console.error('Error generating static paths for blog posts:', error);
    return [];
  }
}

export interface Props {
  post: BlogPost;
  includes: any;
}

const { post, includes } = Astro.props;

// Resolve the featured image using the proper resolveAsset function
let featuredImageResolved = null;
if (post?.fields?.featuredImage?.sys?.id) {
  featuredImageResolved = resolveAsset(post.fields.featuredImage, includes);
}

// Generate SEO metadata
const seoTitle = post.fields.title;
const seoDescription = post.fields.excerpt || `Read ${post.fields.title}`;
// Use 3:2 ratio for featured image (1200x800)
const featuredImage = featuredImageResolved ? getAssetUrl(featuredImageResolved, 1200, 800) : undefined;

// Get category from tags (use first tag as category)
const category = post.fields.tags?.[0] || 'General';

// Render the content (rich text or plain text)
let contentHtml = '';
try {
  if (post?.fields?.content) {
    contentHtml = renderRichText(post.fields.content, { 
      renderNode: {
        // Handle embedded assets in rich text
        [BLOCKS.EMBEDDED_ASSET]: (node: any) => {
          const asset = node.data?.target;
          if (asset) {
            // Try to resolve from includes if it's a link
            const resolvedAsset = resolveAsset(asset, includes) || asset;
            if (resolvedAsset?.fields?.file?.url) {
              const imageUrl = getAssetUrl(resolvedAsset, 1200, 800);
              const alt = resolvedAsset.fields.title || '';
              return `<img src="${imageUrl}" alt="${alt}" class="w-full h-auto my-6" loading="lazy" />`;
            }
          }
          return '';
        }
      }
    });
  }
} catch (error) {
  console.error('Error rendering blog post content:', error);
  // Fallback: show raw content or error message
  contentHtml = `<div class="p-4 bg-red-50 border border-red-200 rounded">
    <p class="text-red-800">Error rendering content. Please check the console for details.</p>
    <pre class="mt-2 text-xs text-red-600 overflow-auto">${String(error)}</pre>
  </div>`;
}

// Calculate accurate word count and reading time from the actual content
function extractTextFromRichText(document: any): string {
  if (!document) return '';
  
  let text = '';
  
  // Handle rich text document structure
  if (document.nodeType === 'document' && document.content) {
    const extractFromNodes = (nodes: any[]): string => {
      return nodes.map((node: any) => {
        if (node.nodeType === 'text') {
          return node.value || '';
        } else if (node.content && Array.isArray(node.content)) {
          return extractFromNodes(node.content);
        }
        return '';
      }).join(' ');
    };
    text = extractFromNodes(document.content);
  } else if (typeof document === 'string') {
    // If it's already a string, use it directly
    text = document;
  } else if (contentHtml) {
    // Fallback: extract text from rendered HTML
    text = contentHtml.replace(/<[^>]*>/g, ' ').replace(/\s+/g, ' ').trim();
  }
  
  return text;
}

// Calculate word count from actual content
let wordCount = 0;
let readingTime = 1;

try {
  const contentText = extractTextFromRichText(post?.fields?.content);
  if (contentText) {
    // Count words (split by whitespace and filter out empty strings)
    const words = contentText.trim().split(/\s+/).filter(word => word.length > 0);
    wordCount = words.length;
    
    // Calculate reading time (average reading speed: 200-250 words per minute, using 200 for conservative estimate)
    readingTime = Math.max(1, Math.ceil(wordCount / 200));
  } else {
    // Fallback if content is empty
    wordCount = 0;
    readingTime = 1;
  }
} catch (error) {
  console.error('Error calculating word count:', error);
  wordCount = 0;
  readingTime = 1;
}

// Generate breadcrumb structured data
const breadcrumbItems = [
  { name: 'Home', url: Astro.url.origin },
  { name: 'Blog', url: `${Astro.url.origin}/blog` },
  { name: post.fields.title, url: Astro.url.href }
];
const breadcrumbStructuredData = generateBreadcrumbStructuredData(breadcrumbItems);

// Get related posts
let relatedPosts: BlogPost[] = [];
try {
  if (post?.fields?.tags && post.fields.tags.length > 0) {
    const relatedResponse = await getBlogPosts({
      'fields.tags[in]': post.fields.tags[0],
      limit: 3,
    });
    // Filter related posts to ensure they have the required structure
    relatedPosts = (relatedResponse.items || [])
      .filter((p: any) => p?.sys?.type === 'Entry' && p?.fields && p.fields.title && p.fields.slug && p.sys.id !== post.sys.id);
  }
} catch (error) {
  console.error('Error fetching related posts:', error);
}
---

<Base 
  title={seoTitle}
  description={seoDescription}
  image={featuredImage}
  type="article"
  publishedTime={post.fields.publishDate}
  modifiedTime={(post.sys as any).updatedAt || post.fields.publishDate}
  author={post.fields.author}
  tags={post.fields.tags}
  readingTime={readingTime}
  wordCount={wordCount}
  category={category}
  hideNav={true}
>
  <!-- Breadcrumb Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbStructuredData)} />

  <article class="bg-white">
    <!-- Custom Navbar for Blog Posts (replaces default navbar) -->
    <nav class="bg-black text-white" role="navigation" aria-label="Blog navigation">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16 md:h-20">
          <!-- Breadcrumb on the left -->
          <div class="flex items-center">
            <ol class="flex items-center space-x-2 text-sm">
              <li>
                <a href="/" class="hover:text-gray-300 transition-colors">Home</a>
              </li>
              <li>
                <span class="mx-2">></span>
              </li>
              <li>
                <a href="/blog" class="hover:text-gray-300 transition-colors">Blog</a>
              </li>
              <li>
                <span class="mx-2">></span>
              </li>
              <li>
                <span class="font-medium" aria-current="page">
                  {post.fields.title}
                </span>
              </li>
            </ol>
          </div>
          
          <!-- Navigation links on the right -->
          <div class="hidden md:flex items-center space-x-6 lg:space-x-8">
            <a href="/" class="text-sm md:text-base font-medium hover:text-gray-300 transition-colors uppercase">
              HOME
            </a>
            <a href="/blog" class="text-sm md:text-base font-medium hover:text-gray-300 transition-colors uppercase">
              BLOG
            </a>
            <a href="/daily-verses" class="text-sm md:text-base font-medium hover:text-gray-300 transition-colors uppercase">
              DAILY VERSES
            </a>
            <a href="/about" class="text-sm md:text-base font-medium hover:text-gray-300 transition-colors uppercase">
              ABOUT
            </a>
            <a href="/contact" class="text-sm md:text-base font-medium hover:text-gray-300 transition-colors uppercase">
              CONTACT
            </a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Blog Post Hero Section -->
    <section class="bg-black text-white py-16 md:py-20">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">
          {post?.fields?.title ?? '(Untitled)'}
        </h1>
        {post?.fields?.excerpt && (
          <p class="text-xl text-gray-400 max-w-3xl mx-auto">
            {post.fields.excerpt}
          </p>
        )}
      </div>
    </section>

    <!-- Featured Image - Contained Section -->
    {featuredImage && (
      <section class="bg-white py-8">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="w-full aspect-[3/2] overflow-hidden">
            <img 
              src={featuredImage}
              alt={post?.fields?.title ?? 'Blog post image'}
              class="w-full h-full object-cover object-center"
              loading="eager"
              decoding="async"
            />
          </div>
        </div>
      </section>
    )}

    <!-- Blog Post Content -->
    <section class="py-16 bg-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Post Meta -->
        <div class="mb-8 pb-4 border-b-2 border-black">
          <!-- Author, Date, and Reading Time -->
          <div class="flex flex-wrap items-center gap-4 text-sm text-gray-700 mb-4">
            {post?.fields?.author && (
              <span class="flex items-center">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                {post.fields.author}
              </span>
            )}
            {post?.fields?.publishDate && (
              <span class="flex items-center">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                {formatDate(post.fields.publishDate)}
              </span>
            )}
            <span class="flex items-center">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              {readingTime} min read
            </span>
            <span class="flex items-center">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              {wordCount} words
            </span>
          </div>
          
          <!-- Tags -->
          {post?.fields?.tags && post.fields.tags.length > 0 && (
            <div class="flex flex-wrap gap-2">
              {post.fields.tags.map((tag: string) => (
                <span class="px-3 py-1 bg-gray-100 text-black text-xs border border-gray-300 whitespace-nowrap">
                  {tag}
                </span>
              ))}
            </div>
          )}
        </div>

        <!-- Content -->
        {contentHtml ? (
          <div 
            class="rich-text-content prose prose-lg max-w-none"
            set:html={contentHtml}
          />
        ) : (
          <div class="text-gray-800">
            <p>No content available for this post.</p>
          </div>
        )}
      </div>
    </section>

    <!-- Related Posts -->
    {relatedPosts.length > 0 && (
      <section class="py-16 bg-gray-50">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
          <h2 class="text-3xl font-bold text-black mb-8">Related Posts</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {relatedPosts.map((relatedPost: BlogPost) => {
              const relatedPostImage = relatedPost?.fields?.featuredImage?.sys?.id 
                ? resolveAsset(relatedPost.fields.featuredImage, includes)
                : null;
              const relatedPostImageUrl = relatedPostImage 
                ? getAssetUrl(relatedPostImage, 400, 267)
                : null;
              
              return (
                <article class="bg-white border border-gray-200 overflow-hidden hover:border-black hover:shadow-lg transition-all">
                  {relatedPostImageUrl && (
                    <div class="w-full aspect-[3/2] overflow-hidden">
                      <img 
                        src={relatedPostImageUrl}
                        alt={relatedPost?.fields?.title ?? 'Related post image'}
                        class="w-full h-full object-cover object-center grayscale hover:grayscale-0 transition-all"
                        loading="lazy"
                        decoding="async"
                        width="400"
                        height="267"
                      />
                    </div>
                  )}
                <div class="p-6">
                  <h3 class="text-xl font-bold text-black mb-2">
                    <a href={`/blog/${relatedPost?.fields?.slug}`} class="hover:underline transition-colors">
                      {relatedPost?.fields?.title ?? '(Untitled)'}
                    </a>
                  </h3>
                  {relatedPost?.fields?.excerpt && (
                    <p class="text-gray-700 text-sm line-clamp-3">
                      {relatedPost.fields.excerpt}
                    </p>
                  )}
                </div>
              </article>
              );
            })}
          </div>
        </div>
      </section>
    )}

    <!-- Back to Blog -->
    <section class="py-16 bg-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <a 
          href="/blog"
          class="inline-flex items-center px-6 py-3 border-2 border-black text-black font-semibold hover:bg-black hover:text-white transition-colors"
        >
          <svg class="mr-2 -ml-1 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to Blog
        </a>
      </div>
    </section>
  </article>
</Base>

<style>
  /* Custom styles for the blog post */
  .rich-text-content h2 {
    @apply text-2xl font-bold text-black mt-8 mb-4;
  }
  
  .rich-text-content h3 {
    @apply text-xl font-semibold text-black mt-6 mb-3;
  }
  
  .rich-text-content p {
    @apply text-gray-800 mb-4 leading-relaxed;
  }
  
  .rich-text-content ul, .rich-text-content ol {
    @apply mb-4 pl-6;
  }
  
  .rich-text-content li {
    @apply text-gray-800 mb-2;
  }
  
  .rich-text-content blockquote {
    @apply border-l-4 border-black pl-4 py-2 my-6 bg-gray-50;
  }
  
  .rich-text-content blockquote p {
    @apply text-gray-800 italic mb-0;
  }
  
  .rich-text-content code {
    @apply bg-gray-100 text-black px-2 py-1 rounded text-sm font-mono;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
